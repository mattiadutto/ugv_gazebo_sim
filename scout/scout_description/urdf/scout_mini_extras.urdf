<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <!-- imu sensor -->
    <link name="imu_link">
      <visual>
        <geometry>
         <box size="0.05 0.05 0.02"/>
        </geometry>
      </visual>

      <collision>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.1"/>
        <inertia ixx="${(0.1/12) * (0.05*0.05 + 0.02*0.02)}" ixy="0.0" ixz="0.0" iyy="${(0.1/12) * (0.05*0.05 + 0.02*0.02)}" iyz="0.0" izz="${(0.1/12) * (0.05*0.05 + 0.05*0.05)}"/>
      </inertial>
    </link>

    <joint name="imu_joint" type="fixed">
      <parent link="base_link"/>
      <child link="imu_link"/>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
    </joint>
    
    <!-- lidar sensor -->
    <joint name="scan_joint" type="fixed">
      <parent link="base_link"/>
      <child link="base_scan"/>
      <axis xyz="0 1 0"/>
      <origin xyz="0.17 0 0.1" rpy="0 0 0"/>
    </joint>
    
    <link name="base_scan">
      <inertial>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
        <mass value="0.2" />
      </inertial>

      <collision>
        <geometry>
          <cylinder length="0.038" radius="0.041"/>
        </geometry>
      </collision>

      <visual>
        <geometry>
           <cylinder length="0.038" radius="0.041"/>
        </geometry>
        <color rgba="0.3 0.3 0.3 1.0"/>
      </visual>
    </link>

    <gazebo reference="base_scan">
      <sensor name="rplidar_a3" type="ray">
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>10</update_rate>
        <pose>0 0 0 0 0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>1600</samples>
              <resolution>0.225</resolution>
              <min_angle>0.00</min_angle>
              <max_angle>6.28</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.2</min>
            <max>12.0</max>
            <resolution>0.12</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        
        <plugin name="lidar_plugin" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <namespace>/robot_namespace</namespace>
            <remapping>~/out:=scan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>base_scan</frame_name>
        </plugin>
      </sensor>
    </gazebo>
  
    <!-- GPS sensor -->
    <link name="gps_link">
      <visual name="gps_antenna">
        <geometry>
           <cylinder length="0.02" radius="0.04"/>
        </geometry>
        <color rgba="0.3 0.3 0.3 1.0"/>
      </visual>

      <visual name="gps_pole">
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <geometry>
           <cylinder length="0.3" radius="0.005"/>
        </geometry>
        <color rgba="0.3 0.3 0.3 1.0"/>
      </visual>

      <collision name="gps_antenna">
        <geometry>
          <cylinder length="0.04" radius="0.02"/>
        </geometry>
      </collision>

      <collision name="gps_pole">
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <geometry>
          <cylinder length="0.3" radius="0.005"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="0.2" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
      </inertial>
    </link>

    <joint name="gps_joint" type="fixed">
      <parent link="base_link"/>
      <child link="gps_link"/>
      <origin xyz="-0.14 -0.1 0.3" rpy="0 0 0"/>
    </joint>


    <!-- Depth Camera -->
    <xacro:include filename="d435.urdf" /> 
</robot>
